<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edittext_frame_scores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_frame_scores"/>

    <TextView
        android:id="@+id/textview_score"
        android:layout_width="120dp"
        android:layout_height="71dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="60dp"
        android:text="Total score is"
        app:layout_constraintStart_toStartOf="@+id/edittext_frame_scores"
        app:layout_constraintTop_toBottomOf="@+id/edittext_frame_scores" />
</androidx.constraintlayout.widget.ConstraintLayout>